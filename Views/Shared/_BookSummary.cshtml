@foreach (var book in Model.Books)
{
    <tr>
        <td>@book.VolumeInfo.Title</td>
        @{
            var authorsString = book.VolumeInfo.Authors != null ? string.Join(", ", book.VolumeInfo.Authors) : "";
            var authorsDisplay = authorsString.Length > 100 ? authorsString.Substring(0, 100) + "..." : authorsString;
        }
        <td>@authorsDisplay</td>
        <td>@(book.VolumeInfo.Description?.Length > 100 ? book.VolumeInfo.Description.Substring(0, 100) + "..." : book.VolumeInfo.Description)</td>
        <td>@book.VolumeInfo.PublishedDate</td>
        <td class="h-100">
            @if (book.VolumeInfo.ImageLinks != null)
            {
                <img class="book-thumbnail" src="@book.VolumeInfo.ImageLinks.Thumbnail" alt="Book thumbnail" />
            }
            else
            {
                <img class="book-thumbnail" src="/images/no_image.jpg" alt="No image available" />
            }
        </td>
    </tr>
}
