@model List<Google.Apis.Books.v1.Data.Volume>

@{
    ViewData["Title"] = "Home";
}

<h1>Book List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Authors</th>
            <th>Description</th>
            <th>Published Date</th>
            <th>Cover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.VolumeInfo.Title</td>
                <td>@(string.Join(", ", book.VolumeInfo.Authors))</td>
                <td>@book.VolumeInfo.Description</td>
                <td>@book.VolumeInfo.PublishedDate</td>
                <td>
                        @if (book.VolumeInfo.ImageLinks != null)
                        {
                        <img src="@book.VolumeInfo.ImageLinks.Thumbnail" alt="Book thumbnail" />
                        }
                </td>
            </tr>
        }
    </tbody>
</table>
